<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>home</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
<div class="card">
  <h1>Vanakam da mapla ğŸ‘‹</h1>

  <!-- Logout -->
  <form action="/logout" method="post" style="text-align:center; margin-bottom:1rem;">
    <input type="hidden" name="user" value="<%= name %>">
    <button>Logout</button>
  </form>

  <!-- Add Task -->
  <form action="/add" method="post">
    <input type="hidden" name="user" value="<%= name %>">
    <input type="text" name="task" placeholder="Add a cute hobby ğŸ’™">
    <input type="submit" value="Add Task">
  </form>

  <ul class="task-list">
    <% hobby.forEach(item => { %>
      <li class="task-card">

        <p class="task-text">ğŸ“ <%= item %></p>

        <div class="task-btns">
          
          <!-- Delete -->
          <form action="/delete" method="post">
            <input type="hidden" name="user" value="<%= name %>">
            <input type="hidden" name="task" value="<%= item %>">
            <button>Delete</button>
          </form>

          <!-- Edit -->
          <form action="/edit" method="post" style="flex:1;">
            <input type="hidden" name="user" value="<%= name %>">
            <input type="hidden" name="oldtask" value="<%= item %>">
            <input type="text" name="newtask" placeholder="Edit hobby âœï¸" required>
            <button>Edit</button>
          </form>

        </div>

      </li>
    <% }) %>
  </ul>
</div>
</body>
</html>
